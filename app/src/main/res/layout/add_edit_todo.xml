<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="22dp">
    <EditText
        android:id="@+id/todo_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/todo_value_name"
        android:textColor="@color/placeholder_todo_add_edit"
        android:backgroundTint="@color/white"/>
    <EditText
        android:id="@+id/todo_edit_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/todo_value_desc"
        android:textColor="@color/placeholder_todo_add_edit"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/todo_edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Date"
            android:textColor="@color/placeholder_todo_add_edit"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"
            android:layout_marginEnd="15dp"/>
        <EditText
            android:id="@+id/todo_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textColor="@color/placeholder_todo_add_edit"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:clickable="false"
            android:cursorVisible="false"/>
    </LinearLayout>
</LinearLayout>