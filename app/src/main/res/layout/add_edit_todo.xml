<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:padding="7dp">

        <EditText
            android:id="@+id/todo_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo_value_name"
            android:textColor="@color/placeholder_todo_add_edit"/>
        <EditText
            android:id="@+id/todo_edit_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/todo_value_desc"
            android:textColor="@color/placeholder_todo_add_edit"/>
        <EditText
            android:id="@+id/todo_edit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_value_date"
            android:textColor="@color/placeholder_todo_add_edit"/>
    </LinearLayout>
</LinearLayout>